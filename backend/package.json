{
  "name": "yega-backend",
  "version": "1.0.0",
  "description": "Backend API para YEGA - Plataforma de e-commerce con mÃºltiples roles",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:frontend": "cd ../frontend && npm ci && npm run build",
    "serve:prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ../ecosystem.config.js",
    "pm2:restart": "pm2 restart yega-api || pm2 start ../ecosystem.config.js",
    "pm2:stop": "pm2 stop yega-api || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --runInBand",
    "wipe:users": "node scripts/wipeUsers.js",
    "wipe:keepSeed": "node scripts/keepAdminTienda.js",
    "seed": "node scripts/seedDatabase.js",
    "seed:demos": "node scripts/seedDemoUsers.js",
    "seed:orders": "node scripts/seedDemoOrders.js",
    "seed:testUsers": "node scripts/resetToClientAndDelivery.js",
    "seed:baseUsers": "node scripts/seedBaseUsers.js",
    "reset:exceptAdmin": "node scripts/resetExceptAdmin.js",
    "smoke:cleanup": "node scripts/smokeCleanup.js",
    "cleanup:demoOrders": "node scripts/cleanupDemoOrders.js",
    "cleanup:products": "node scripts/cleanupAllProducts.js",
    "cleanup:all": "node scripts/cleanupAll.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "ecommerce",
    "api",
    "jwt",
    "twilio"
  ],
  "author": "Equipo YEGA",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
